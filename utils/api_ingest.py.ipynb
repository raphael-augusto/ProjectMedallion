    "# utils/api_ingest.py\n",
    "\n",
    "import requests\n",
    "import pandas as pd\n",
    "\n",
    "def fetch_api_to_spark(api_url, spark):\n",
    "    resp = requests.get(api_url)\n",
    "    resp.raise_for_status()\n",
    "    df_pd = pd.json_normalize(resp.json()[\"value\"])\n",
    "    return spark.createDataFrame(df_pd)\n"
   ]
